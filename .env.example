# Campus Connect - example environment configuration

# Node environment: development | production
NODE_ENV=development

# Backend server
PORT=5000

# PostgreSQL connection
DATABASE_URL=postgres://postgres:postgres@postgres:5432/campus_connect

# JWT secrets (change in production!)
JWT_SECRET=change-this-super-secret-key
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=change-this-refresh-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS: frontend origin
CORS_ORIGIN=http://localhost:5173

# Frontend: API base URL (used by Vite)
VITE_API_BASE_URL=http://localhost:5000/api

